<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        body {
           background-image: url('@ViewBag.BackgroundImageUrl');
           background-color: #cccccc;
        }
    </style>
</head>
<body>

    <div class="jumbotron">
        <h1 style="background-color: rgba(255, 255, 255, 0.1);padding: 10px; font-size:1.5em;width:30%;">
            Preview
        </h1>
        <p class="lead"></p>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    @RenderSection("script")
</body>
</html>
